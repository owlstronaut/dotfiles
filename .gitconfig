[user]
  name = Michael Smith
  email = owlstronaut@github.com
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHlAYc0f/UQhli3mQbt3zHo6Q/mSrzy46piN4yKruOlO
[gpg]
  format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
  gpgsign = true
[color]
  diff=always
  status=always
  branch=always
  interactive=always
[alias]
  co = checkout
  br = branch
  d = difftool
  dc = difftool --cached
  dd = difftool --dir-diff
  ff = merge
  c = commit --verbose
  brc = for-each-ref --count=5 --sort=committerdate refs/heads/ --format='%(refname:short)'
  cp = cherry-pick
  revertall= reset --hard
  unstage = reset HEAD
  uncommit = reset --soft HEAD~1
  pushd = push -u origin HEAD
  fetchme = "!git fetch origin $(git branch --show-current) && git merge"
[push]
  default = tracking
[github]
  user = owlstronaut
[diff]
  tool = code
[difftool]
  prompt = false
[difftool "code"]
  trustExitCode = true
  cmd = code --wait --diff $LOCAL $REMOTE
[merge]
  tool = code
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "code"]
  trustExitCode = true
  cmd = code --wait $MERGED
[pager]
  branch = false
[core]
  pager = cat
[pull]
  rebase = false
[init]
  defaultBranch = main
[fetch]
  prune = true